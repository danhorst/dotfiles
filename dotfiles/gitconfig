[user]
  name  = "Dan Brubaker Horst"
  email = danhorst@gmail.com
[alias]
  ci = commit -v -a
  st = status
  rs = reset --hard HEAD
  ba = branch -a
  co = checkout
  unmerged-edit = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; mate `f`"
  unmerged-add = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
[apply]
  whitespace = nowarn
[branch]
  autosetupmerge = true
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = red reverse
  local = red bold
  remote = yellow
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = magenta  

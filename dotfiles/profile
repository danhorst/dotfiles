function rr {
  if [ -f script/server ]; then
    script/server $@
  else
   rails server $@
  fi
}
function console {
  if [ -f script/console ]; then
    script/console $@
  else
    rails console $@
  fi
}
function rg {
  if [ -e script/generate ]; then
    script/generate $@
  else
    rails generate $@
  fi
}
